@inject IHttpContextAccessor httpContextAccessor

@{
    var userId = httpContextAccessor.HttpContext?.Session.GetString(Constants.SessionData.UserId); // TODO: Lägg i metod.
    bool isLoggedIn = (!string.IsNullOrEmpty(userId));
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <a class="navbar-brand" asp-page="/Index">EkoStat</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                @if (isLoggedIn)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Entries/Index">Entries</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Articles/Index">Articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Tags/Index">Tags</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Reports/Index">Reports</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/User/Settings">Settings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/User/Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/User/Login">Login / Register</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/About">About</a>
                </li>
            </ul>
        </div>
    </div>
</nav>