@page "/Articles"
@model EkoStatRp.Pages.Articles.ArticlesIndex
@inject EkoStatRp.Helpers.DtoHelper _dtoHelper
@{
    ViewData["Title"] = "Articles";
}

<h1>Articles</h1>
<hr />

<form method="post">
    <div id="formInputContainer">
        <div>
            <label asp-for="@Model.NewArticle.Name"></label>
            <input asp-for="@Model.NewArticle.Name" />
        </div>
    </div>
    <button type="submit">Submit</button>
</form>
<hr />

<table class="table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            var tags = _dtoHelper.GetTagNamesAsString(article.Tags);
            <tr>
                <td>@article.Name</td>
                <td>@tags</td>
                <td>-knappar-</td>
            </tr>
        }
    </tbody>
</table>
